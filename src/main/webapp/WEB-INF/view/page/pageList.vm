#parse("./inc/head.vm")
<body>
<div class="main-container" id="main-container">
	<div class="main-container-inner">
		<div class="ace-settings-container" id="ace-settings-container">
			<div class="btn btn-app btn-xs btn-warning ace-settings-btn" id="ace-settings-btn">
				<i class="icon-cog bigger-150"></i>
			</div>
			<div class="ace-settings-box" id="ace-settings-box">
				<div>
					<span><a href="javascript:void(0)" onclick="openAddPage();">添加页面</a></span>
				</div>
			</div>
		</div>
		<div class="">
			<div class="search">
    			<div class="form-group">
    				<div class="col-sm-3">
						<span class="control-label search-label">页面名称：</span>
    					<input type="text" id="name" name="name" placeholder="" class="col-xs-6 col-sm-6" />
    				</div>
    			</div>
    			<button class="btn btn-xs btn-info" onclick="doSearch()">搜索</button>
			</div>
			<div class="page-content">
				<br/>
				<div class="row col-xs-12">
					<table id="sample-table-1" class="table table-striped table-bordered table-hover">
							<thead>
								<tr>
									<th>页面名称</th>
									<th>页面说明</th>
									<th>创建时间</th>
									<th>修改时间</th>
								    <th></th>
								</tr>
							</thead>

							<tbody>
								<tr style="display:none;" class="node_row">
									<td >$[name]</td>
									<td >$[remark]</td>
									<td >$[createTime]</td>
									<td >$[lastUpdateTime]</td>
								    <td>
											<a href="javascript:void(0)" onclick="openEditPage($[id])">编辑</a>
											<a href="javascript:void(0)" onclick="deletePage($[id])">删除</a>
											<a href="webBuilder?pageId=$[id]" target="_blank">设计</a>
								    </td>
								</tr>
							</tbody>
						</table>
				</div><!-- /row -->
				<div class="row">
					<div class="col-xs-12">
						<div>
							<ul class="pagination" id="pagination"></ul>
						</div>
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div><!-- /.page-content -->
		</div><!-- /.main-content -->
	</div><!-- /.main-container-inner -->

</div><!-- /.main-container -->

#parse("./inc/footer.vm")

<script type="text/javascript">
var pager;
var curResult;
$(function(){
	listData(0);
});

function doSearch(){
	pager=null;
	listData(0);
}

function listData(currentResult){
	curResult = currentResult;
	var name = $('#name').val();
	$.ajax({
        type: "POST",
        url: '${ServiceName}/page/listPageData',
        data: {currentResult:currentResult , name:name , projectId: ${projectId}},
        dataType:'json'
    }).done(function (result) {
        if(result.code!=0){
			layer.msg(result.desc);
			return;
		}
		buildHtmlWithJsonArray('node_row' , result.data.result , false , false);
		var totalPages = result.data.totalPage;
		if(totalPages==0){
			totalPages=1;
		}
		if(pager==null){
			pager = createPager('#pagination', totalPages ,function(num, type){
				listData((num-1)*result.data.pageSize);	
			});
		}
    });
}


function openEditPage(id){
	layer.open({
	  type: 2,
	  title: '修改页面',
	  shade: 0.5,
	  area: ['50%', '450px'],
	  content: '${ServiceName}/page/editPage?pageId='+id,
	  cancel:function(index){
	  }
	});
}

function openAddPage(){
	layer.open({
	  type: 2,
	  title: '添加页面',
	  shade: 0.5,
	  area: ['50%', '350px'],
	  content: '${ServiceName}/page/addPage?projectId=${projectId}',
	  cancel:function(index){
	  }
	});
}

function deletePage(id){
	layer.confirm('确定要删除该条数据吗？', {
		  btn: ['是','否'] //按钮
		}, function(){
		  //yes
			$.ajax({
		        type: "POST",
		        url: '${ServiceName}' + "/page/delete",
		        data: {
		            "pageId": id
		        }
		    }).done(function (data) {
		    	if(data.code == 0){
			    	listData(curResult);
			    	layer.msg('删除成功');
		    	}else{
		    		layer.msg(data.desc);
		    	}
		    });
		}, function(){
		  //no
		});
}
</script>
</body>
</html>

