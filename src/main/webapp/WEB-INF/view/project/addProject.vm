#parse("./inc/head.vm")
      <div class="modal-content">
         <div class="modal-body">
            <form id="form" class="form-horizontal" >
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">项目名称：<span style="color:red;">*</span></span> 
					<div class="col-sm-9">
						<input type="text"  name="name" class="col-xs-10 col-sm-5" 
							data-null-msg="项目名称不能为空" maxlength="50"/>
					</div>
				</div>
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">数据库url：<span style="color:red;">*</span></span> 
					<div class="col-sm-9">
						<textarea data-null-msg="数据库url不能为空" maxlength="500" rows="3" cols="" name="dbUrl"  class="col-xs-10 col-sm-5" ></textarea>
					</div>
				</div>
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">数据库账号：<span style="color:red;">*</span></span> 
					<div class="col-sm-9">
						<input type="text"  name="dbUserName" class="col-xs-10 col-sm-5"  
							data-null-msg="数据库账号不能为空" maxlength="50"/>
					</div>
				</div>
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">数据库密码：<span style="color:red;">*</span></span> 
					<div class="col-sm-9">
						<input type="text"  name="dbPassword" class="col-xs-10 col-sm-5"  
							data-null-msg="数据库密码不能为空" maxlength="50"/>
					</div>
				</div>
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">项目描述：</span> 
					<div class="col-sm-9">
						<textarea rows="3" cols="" name="remark"  class="col-xs-10 col-sm-5" ></textarea>
					</div>
				</div>
			</form>
         </div>
         <div class="modal-footer">
            <button type="button" id="item_submit" class="btn btn-primary">
               	保存
            </button>
         </div>
      </div>

<script type="text/javascript">
//提交
$("#item_submit").on("click", function (e) {
    //check form data
	if(!validateForm('form')){
		return;
	}
	
    var data = $('#form').serialize();
    $.ajax({
        type: "POST",
        url: '${ServiceName}' + "/project/doAddProject",
        data: data,
        dataType:'json'
    }).done(function (data) {
        if (data.code == -1) {
            layer.msg(data.desc);
        } else {
        	layer.msg('保存成功');
        	closeWindowAndRefreshParent();
        }
    });
});
</script>