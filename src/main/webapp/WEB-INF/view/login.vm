#parse("./inc/head.vm")
<script type="text/javascript" src="${ServiceName}/assets/js/security.js">
</script>
<body class="login-layout">
<div class="main-content login-body">
				<div class="row">
					<div class="col-sm-10 col-sm-offset-1">
						<div class="login-container">
							<div class="center">
								<h1>
									<span class="red">聚贸代码生成平台</span>
								</h1>
							</div>

							<div class="space-6"></div>

							<div class="position-relative">
								<div id="login-box" class="login-box visible widget-box no-border">
									<div class="widget-body">
										<div class="widget-main">
											<form id="commentForm" role="form" class="form-horizontal" method="post">
												<fieldset>
													<label class="block clearfix">
													</label>
													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<input id="username" name="username" type="text" class="form-control" placeholder="用户名">
															<i class="icon-user"></i>
														</span>
													</label>
													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<input id="password" name="password" type="password" class="form-control" placeholder="密码">
															<i class="icon-lock"></i>
														</span>
													</label>

													<div class="space"></div>

													<div class="clearfix">
														<button id="login_button" type="submit" class="width-35 pull-left btn btn-sm btn-primary">
															<i class="icon-key"></i>
															登录
														</button>
													</div>
												</fieldset>
											</form>
										</div><!-- /widget-main -->
									</div><!-- /widget-body -->
								</div><!-- /login-box -->
							</div><!-- /position-relative -->
						</div>
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div>
#parse("./inc/footer.vm")
<!-- inline scripts related to this page -->

<script type="text/javascript">
    jQuery(function($) {
		$("#commentForm").validate({
			rules: {
				username: {
					required: true
				},
				password: {
					required: true
				}
			},
			submitHandler: function(form) {
				//通过之后回调 
		       doSubmit();
		       return false;
	        }, 
	        invalidHandler: function(form, validator) {  //不通过回调 
		          return false; 
	        }
		});
    });  
    
    function doSubmit(){
  	   	RSAUtils.setMaxDigits(200);  
       	//setMaxDigits(256);  
      	var key = new RSAUtils.getKeyPair("${publicKeyExponent}", "", "${publicKeyModulus}");
      	var username = $("#username").val();
       	var password = $("#password").val();
       	var reversedPwd = password.split("").reverse().join("");//js里面是反序的字符串，不知道为啥
       	var encrypedPwd = RSAUtils.encryptedString(key,reversedPwd);
		
		$.ajax({
            type: "POST",
            url: '${ServiceName}/doLogin',
            data: {username: username, password: encrypedPwd},
            dataType:'json'
        }).done(function (jsonData) {
            //如果为true，证明该用户已经下载过，显示已下载提示，否则直接下载  
            if (jsonData.code == 0) {  
                //登录成功  
                window.location.href = '${ServiceName}/index';  
            } else {  
                layer.msg(jsonData.desc);
            }  
        });
	
    }
</script>
</body>
</html>

