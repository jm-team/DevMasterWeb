#parse("./inc/head.vm")
<body>
	#parse("./inc/top.vm")
<div class="main-container" id="main-container">
	<div class="main-container-inner">
		#parse("./inc/siderbar.vm")
		<div class="ace-settings-container" id="ace-settings-container">
			<div class="btn btn-app btn-xs btn-warning ace-settings-btn" id="ace-settings-btn">
				<i class="icon-cog bigger-150"></i>
			</div>
			<div class="ace-settings-box" id="ace-settings-box">
				<div>
					<span><a href="javascript:void(0)" onclick="openAddProject();">添加项目</a></span>
				</div>
			</div>
		</div>
		<div class="main-content">
			<div class="search">
    			<div class="form-group">
    				<div class="col-sm-3">
						<span class="control-label search-label">工程名称：</span>
    					<input type="text" id="name" placeholder="请输入工程名称" class="col-xs-6 col-sm-6" />
    				</div>
    			</div>
    			<button class="btn btn-xs btn-info" onclick="doSearch()">搜索</button>
			</div>
			<div class="page-content">
				<br/>
				<div class="row col-xs-12">
					<table id="sample-table-1" class="table table-striped table-bordered table-hover">
							<thead>
								<tr>
									<th>模板名称</th>
									<th>说明</th>
									<th>创建时间</th>
									<th>创建人</th>
								    <th></th>
								</tr>
							</thead>

							<tbody>
								<tr style="display:none;" class="node_row">
								    <td ><a href="${ServiceName}/entity/entityList?projectId=$[id]">$[name]</a></td>
								    <td >$[remark]</td>
									<td >$[createTime]</td>
									<td >$[createUser]</td>
								    <td>
											<a href="javascript:void(0)" onclick="deleteProject($[id])">删除</a>
								    </td>
								</tr>
							</tbody>
						</table>
				</div><!-- /row -->
				<div class="row">
					<div class="col-xs-12">
						<div>
							<ul class="pagination" id="pagination"></ul>
						</div>
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div><!-- /.page-content -->
		</div><!-- /.main-content -->
	</div><!-- /.main-container-inner -->

</div><!-- /.main-container -->

#parse("./inc/footer.vm")

<script type="text/javascript">
var pager;
var curResult;
$(function(){
	listData(0);
});

function doSearch(){
	pager=null;
	listData(0);
}

function listData(currentResult){
	curResult = currentResult;
	var name = $('#name').val();
	var devUsername = $('#devUsername').val();
	$.ajax({
        type: "POST",
        url: '${ServiceName}/template/listTemplateData',
        data: {currentResult:currentResult , name:name},
        dataType:'json'
    }).done(function (result) {
        if(result.code!=0){
			layer.msg(result.desc);
			return;
		}
		buildHtmlWithJsonArray('node_row' , result.data.result , false , false);
		var totalPages = result.data.totalPage;
		if(totalPages==0){
			totalPages=1;
		}
		if(pager==null){
			pager = createPager('#pagination', totalPages ,function(num, type){
				listData((num-1)*result.data.pageSize);	
			});
		}
    });
}

function openAddTemplate(){
	layer.open({
	  type: 2,
	  title: '添加项目',
	  shade: 0.5,
	  area: ['50%', '450px'],
	  content: '${ServiceName}/template/addTemplate',
	  cancel:function(index){
		  listData(curResult);
	  }
	});
}



function deleteTemplate(id){
	layer.confirm('确定要删除该条数据吗？', {
		  btn: ['是','否'] //按钮
		}, function(){
		  //yes
			$.ajax({
		        type: "POST",
		        url: '${ServiceName}' + "/template/delete?id="+id,
		        data: {
		            "id": id
		        }
		    }).done(function (data) {
		    	if(data.code == 0){
			    	listData(curResult);
			    	layer.msg('删除成功');
		    	}else{
		    		layer.msg(data.desc);
		    	}
		    });
		}, function(){
		  //no
		});
}
</script>
</body>
</html>

