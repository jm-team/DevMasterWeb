#parse("./inc/head.vm")
      <div class="modal-content">
         <div class="modal-body">
            <form id="form" class="form-horizontal" >
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">名称：<span style="color:red;">*</span></span> 
					<div class="col-sm-9">
						<input type="text"  name="title" class="col-xs-10 col-sm-5" 
							data-null-msg="名称不能为空" maxlength="50" />
					</div>
				</div>
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">模板文件扩展名：<span style="color:red;">*</span></span> 
					<div class="col-sm-9">
						<input type="text"  name="exts" placeholder="vm,js,html,css,java,jsp" class="col-xs-10 col-sm-5" 
							data-null-msg="模板文件扩展名不能为空" maxlength="50"/>
					</div>
				</div>
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">模板上下文初始化脚本：</span> 
					<div class="col-sm-9">
						<input type="text"  name="entityNameFunction" placeholder="模板跟目录的相对路径(parse.js)" class="col-xs-10 col-sm-5" 
							data-null-msg="" maxlength="100"/>
						<span>一个js文件名可以被rhino执行，用于初始化velocity模板的上下文，这个文件应该在你的模板里</span>
					</div>
				</div>
				<div class="form-group">
					<span class="col-sm-3 control-label no-padding-right">模板描述：</span> 
					<div class="col-sm-9">
						<textarea rows="5" cols="" name="remark"  class="col-xs-10 col-sm-5" ></textarea>
					</div>
				</div>
			</form>
         </div>
         <div class="modal-footer">
            <button type="button" id="item_submit" class="btn btn-primary">
               	保存
            </button>
         </div>
      </div>

<script type="text/javascript">
//提交
$("#item_submit").on("click", function (e) {
    //check form data
	if(!validateForm('form')){
		return;
	}
	
    var data = $('#form').serialize();
    if(parseInt(getUrlParam('scope')) == 2){
        data += '&scope=2';
    }
    $.ajax({
        type: "POST",
        url: '${ServiceName}' + "/template/doAddTemplate",
        data: data,
        dataType:'json'
    }).done(function (data) {
        if (data.code == -1) {
            layer.msg(data.desc);
        } else {
        	layer.msg('保存成功');
        	closeWindowAndRefreshParent();
        }
    });
});
</script>